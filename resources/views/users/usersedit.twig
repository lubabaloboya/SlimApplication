{% extends '/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit User
                </div>
                <div class="panel-body">    
                {% for u in user %}
                    <form action="{{ path_for('users.update') }}" method="post" autocomplete="off">
                     
                        <div class="form-group{{ errors.email ? ' has-error': '' }}">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email"  value="{{ u.email }}" class="form-control" placeholder="you@domain.com">
                            {% if errors.email %}
                                <span class="help-block">{{ errors.email | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group{{ errors.name ? ' has-error': '' }}">
                            <label for="name">Name</label>
                            <input type="text" name="name" id="name" value="{{ u.name }}" class="form-control">
                            {% if errors.name %}
                                <span class="help-block">{{ errors.name | first }}</span>
                            {% endif %}
                        </div>

                        {{ endfor }}
                        <div class="form-group{{ errors.password ? ' has-error': '' }}">
                            <label for="password">Password</label>
                            <input type="password" name="password" id="password" class="form-control">
                            {% if errors.password %}
                                <span class="help-block">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>

                        <input type="hidden" name="id" value="{{ u.id }}">

                        <button type="submit" class="btn btn-default">Save</button>

                        {{ csrf.field | raw }}
                  
                    </form>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
